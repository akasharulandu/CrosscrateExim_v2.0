{
  "name": "crosscrate-exim",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build",
    "start-server": "cd server && npm start",
    "start": "npm run install-server && npm run install-client && npm run build-client && npm run start-server",
    "dev": "concurrently \"cd server && npm run dev\" \"cd client && npm start\""
  },
  "dependencies": {
    "bootstrap": "^5.3.6",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "react-bootstrap": "^2.10.10",
    "react-icons": "^5.5.0",
    "react-swipeable": "^7.0.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
